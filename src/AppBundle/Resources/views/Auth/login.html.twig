{% extends 'AppBundle::auth_wrapper.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}

	<p class="login-box-msg">Log in to make good things</p>

    <form action="{{ path('login') }}" method="post">
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Username/Email" name="_username">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password" name="_password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox" name="_remember_me"> Remember Me For 1 Year
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Log In</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' } }) }}
	{{ form_errors(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}

    <hr>

    <a href="{{ path('restore') }}">I forgot my password</a><br>
    <a href="{{ path('register') }}" class="text-center">I want to become a good friend</a>

{% endblock %}